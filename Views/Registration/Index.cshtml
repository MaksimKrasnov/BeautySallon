@model RegisterationModel

@{
	ViewData["Title"] = "";
	Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/LoginAndRegistration.css" asp-append-version="true" />

</style>
<body class="bg-dark">
	<div class="container d-flex justify-content-center align-items-center mt-5">
		<div class="container-fluid">

			<div class="col-md-4 offset-md-4">
				<div class="form-container">
					<div class="form-icon mt-2"><i class="fa fa-user"></i></div>
					<h3 class="title">Login</h3>
					
					
					<form class="form-horizontal" asp-action="Index" asp-controller="Registration" asp-anti-forgery="true">
						<div class="validation" asp-validation-summary="ModelOnly"></div>
						<div>
							<div class="form-group">
								<label asp-for="Name">Введите ваше имя</label><br />
								<input class="form-control" type="text" asp-for="Name" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Email">Введите Email</label><br />
								<input class="form-control" type="email" asp-for="Email" />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="PhoneNumber">Введите номер телефона</label><br />
								<input class="form-control" type="text" asp-for="PhoneNumber" />
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Password">Введите пароль</label><br />
								<input class="form-control" type="password" asp-for="Password" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="ConfirmPassword">Повторите пароль</label><br />
								<input class="form-control" type="password" asp-for="ConfirmPassword" />
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
							<div>
								<input class="btn btn-default" type="submit" value="Регистрация" />
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
</body>
<script>
	$(document).ready(function () {
		$('#PhoneNumber').on('input', function () {
			var value = $(this).val().replace(/\D/g, '');
			if (value.length > 10) {
				value = value.slice(0, 10);
			}
			$(this).val('+7' + value);
		});

		$('form').on('submit', function (event) {
			var phoneInput = $('#PhoneNumber').val();
			if (phoneInput.length !== 12) {
				event.preventDefault();
				alert("Телефон должен начинаться с +7 и содержать 12 символов.");
			}
		});
	});
</script>